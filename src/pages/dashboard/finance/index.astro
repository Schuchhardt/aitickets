---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
---

<DashboardLayout title="Ingresos">
    <div class="space-y-6">
        <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-900">
                Ingresos y Finanzas
            </h1>
        </div>

        <!-- Quick Stats Placeholder -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div
                class="bg-white p-6 rounded-xl border border-gray-100 shadow-sm"
            >
                <h3 class="text-gray-500 text-sm font-medium">
                    Ingresos Totales
                </h3>
                <p class="text-3xl font-bold mt-2">$0.00</p>
            </div>
            <div
                class="bg-white p-6 rounded-xl border border-gray-100 shadow-sm"
            >
                <h3 class="text-gray-500 text-sm font-medium">
                    Pendiente de Pago
                </h3>
                <p class="text-3xl font-bold mt-2">$0.00</p>
            </div>
            <div
                class="bg-white p-6 rounded-xl border border-gray-100 shadow-sm"
            >
                <h3 class="text-gray-500 text-sm font-medium">Próximo Pago</h3>
                <p class="text-lg font-semibold mt-2 text-gray-900">-</p>
            </div>
        </div>

        <div
            class="bg-white rounded-xl border border-gray-100 p-8 text-center shadow-sm mt-6"
        >
            <div class="max-w-md mx-auto">
                <h3 class="text-lg font-medium text-gray-900 mb-2">
                    Detalle de Transacciones
                </h3>
                <p class="text-gray-500">
                    Aquí podrás ver el desglose de ventas por evento y descargar
                    reportes financieros.
                </p>
            </div>
        </div>
    </div>
</DashboardLayout>
