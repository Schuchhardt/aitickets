---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import { createSupabaseServerClient } from "../../../lib/supabaseServer";
import { getSupabaseAdmin } from "../../../lib/auth-helpers";
import {
    Ticket,
    Calendar,
    ChevronDown,
    Users,
    DollarSign,
    Gift,
    Clock,
    CheckCircle,
    XCircle,
    Search,
} from "lucide-vue-next";

const supabase = createSupabaseServerClient(Astro);
const supabaseAdmin = getSupabaseAdmin();

const {
    data: { user },
} = await supabase.auth.getUser();

if (!user) {
    return Astro.redirect("/organizadores/login");
}

// Get public user info (organization_id)
const { data: dbUser } = await supabase
    .from("users")
    .select("organization_id")
    .eq("auth_user_id", user.id)
    .single();

if (!dbUser || !dbUser.organization_id) {
    console.error("User request without organization_id");
}

const now = new Date().toISOString();

// Fetch current events (end_date >= now or start_date >= now)
const { data: currentEvents } = await supabaseAdmin
    .from("events")
    .select(
        `
    id,
    name,
    title,
    slug,
    start_date,
    end_date,
    status,
    image_url,
    event_tickets (
      id,
      ticket_name,
      price,
      total_quantity,
      status
    )
  `,
    )
    .eq("organization_id", dbUser?.organization_id)
    .gte("end_date", now)
    .order("start_date", { ascending: true });

// Fetch past events (end_date < now)
const { data: pastEvents } = await supabaseAdmin
    .from("events")
    .select(
        `
    id,
    name,
    title,
    slug,
    start_date,
    end_date,
    status,
    image_url,
    event_tickets (
      id,
      ticket_name,
      price,
      total_quantity,
      status
    )
  `,
    )
    .eq("organization_id", dbUser?.organization_id)
    .lt("end_date", now)
    .order("end_date", { ascending: false });

// Function to get ticket stats for an event
async function getTicketStats(eventId: number) {
    // Get attendees count per ticket type
    const { data: attendees } = await supabaseAdmin
        .from("event_attendees")
        .select("id, event_ticket_id, event_order_id")
        .eq("event_id", eventId);

    // Get paid orders for this event
    const { data: paidOrders } = await supabaseAdmin
        .from("event_orders")
        .select("id")
        .eq("event_id", eventId)
        .eq("status", "paid");

    const paidOrderIds = new Set(paidOrders?.map((o) => o.id) || []);

    // Count sold tickets: attendees with paid order OR attendees without order (free tickets)
    const soldAttendees =
        attendees?.filter((a) => {
            if (a.event_order_id === null) return true; // Free ticket
            return paidOrderIds.has(a.event_order_id); // Paid order
        }) || [];

    return {
        totalSold: soldAttendees.length,
        byTicketType: soldAttendees.reduce(
            (acc, a) => {
                const ticketId = a.event_ticket_id;
                acc[ticketId] = (acc[ticketId] || 0) + 1;
                return acc;
            },
            {} as Record<number, number>,
        ),
    };
}

// Function to get attendee list for an event
async function getAttendeeList(eventId: number) {
    // Get all attendees with their ticket and attendee info
    const { data: eventAttendees } = await supabaseAdmin
        .from("event_attendees")
        .select(
            `
      id,
      created_at,
      event_order_id,
      status,
      validated_at,
      is_complimentary,
      event_tickets (
        id,
        ticket_name,
        price
      ),
      attendees (
        id,
        first_name,
        last_name,
        email
      )
    `,
        )
        .eq("event_id", eventId)
        .order("created_at", { ascending: false });

    // Get paid orders for filtering
    const { data: paidOrders } = await supabaseAdmin
        .from("event_orders")
        .select("id, created_at, amount")
        .eq("event_id", eventId)
        .eq("status", "paid");

    const paidOrderMap = new Map(paidOrders?.map((o) => [o.id, o]) || []);

    // Filter attendees: those with paid orders OR those without orders (free)
    const validAttendees =
        eventAttendees?.filter((a) => {
            if (a.event_order_id === null) return true;
            return paidOrderMap.has(a.event_order_id);
        }) || [];

    return validAttendees.map((a) => ({
        id: a.id,
        name:
            `${a.attendees?.first_name || ""} ${a.attendees?.last_name || ""}`.trim() ||
            "Sin nombre",
        email: a.attendees?.email || "Sin email",
        ticketType: a.event_tickets?.ticket_name || "N/A",
        price: a.event_tickets?.price || 0,
        isFree: a.event_order_id === null,
        isComplimentary: a.is_complimentary,
        purchaseDate: a.created_at,
        status: a.status,
        validated: !!a.validated_at,
    }));
}

// Pre-compute stats for all events
const eventStats: Record<
    number,
    { totalSold: number; byTicketType: Record<number, number> }
> = {};
const eventAttendees: Record<
    number,
    ReturnType<typeof getAttendeeList> extends Promise<infer T> ? T : never
> = {};

const allEvents = [...(currentEvents || []), ...(pastEvents || [])];
for (const event of allEvents) {
    eventStats[event.id] = await getTicketStats(event.id);
    eventAttendees[event.id] = await getAttendeeList(event.id);
}

// Format price
function formatPrice(price: number): string {
    return new Intl.NumberFormat("es-CL", {
        style: "currency",
        currency: "CLP",
        minimumFractionDigits: 0,
    }).format(price);
}

// Format date
function formatDate(dateString: string): string {
    return new Date(dateString).toLocaleDateString("es-CL", {
        day: "2-digit",
        month: "short",
        year: "numeric",
        hour: "2-digit",
        minute: "2-digit",
    });
}
